{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": ".",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "hercules": {
      "type": "application",
      "root": "apps/hercules",
      "entryFile": "main",
      "sourceRoot": "apps/hercules/src",
      "compilerOptions": {
        "tsConfigPath": "apps/hercules/tsconfig.app.json",
        "plugins": [
          "@nestjs/swagger"
        ],
        "assets": [
          {
            "include": "**/*.pug",
            "exclude": "**/omitted.graphql",
            "outDir": "dist/apps/hercules/apps/hercules/src",
            "watchAssets": true
          }
        ]
      }
    },
    "apollo": {
      "type": "application",
      "root": "apps/apollo",
      "entryFile": "main",
      "sourceRoot": "apps/apollo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/apollo/tsconfig.app.json"
      }
    },
    "athena": {
      "type": "application",
      "root": "apps/athena",
      "entryFile": "main",
      "sourceRoot": "apps/athena/src",
      "compilerOptions": {
        "tsConfigPath": "apps/athena/tsconfig.app.json"
      }
    },
    "hesita": {
      "type": "application",
      "root": "apps/hesita",
      "entryFile": "main",
      "sourceRoot": "apps/hesita/src",
      "compilerOptions": {
        "tsConfigPath": "apps/hesita/tsconfig.app.json"
      }
    },
    "coeus": {
      "type": "application",
      "root": "apps/coeus",
      "entryFile": "main",
      "sourceRoot": "apps/coeus/src",
      "compilerOptions": {
        "tsConfigPath": "apps/coeus/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/hercules/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "."
}