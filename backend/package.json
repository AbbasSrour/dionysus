  "main": "index.js",
  "scripts": {
    "build": "pnpm rimraf ./build && pnpm tsc",
    "start": "pnpm cross-env NODE_ENV=production node build/src/index.js",
    "stage": "pnpm cross-env NODE_ENV=staging node build/src/index.js",
    "dev": "pnpm cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "test": "jest --watchAll --coverage --verbose",
    "typeorm:cli": "pnpm cross-env NODE_ENV=development ts-node --transpile-only ./node_modules/typeorm/cli.js",
    "migration:generate": "NODE_ENV=development pnpm run typeorm:cli migration:generate",
    "migration:create": "pnpm run typeorm:cli migration:create",
    "migration:run": "pnpm run typeorm:cli migration:run",
    "migration:revert": "pnpm run typeorm:cli migration:revert"
  },
