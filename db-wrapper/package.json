  "main": "index.js",
  "volta": {
    "node": "18.5.0"
  },
  "scripts": {
    "build": "pnpm rimraf ./build && pnpm tsc",
    "start": "NODE_ENV=production pnpm node build/src/index.js",
    "stage": "NODE_ENV=stage node build/src/index.js",
    "dev": "NODE_ENV=development pnpm ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "test": "jest --watchAll --coverage --verbose",
    "typeorm:cli": "NODE_ENV=production pnpm ts-node --transpile-only ./node_modules/typeorm/cli.js",
    "migration:generate": "pnpm run typeorm:cli migration:generate",
    "migration:create": "pnpm run typeorm:cli migration:create",
    "migration:run": "pnpm run typeorm:cli migration:run",
    "migration:revert": "pnpm run typeorm:cli migration:revert"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "got": "^11.8.3",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-typescript-api": "^9.3.1",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.7",
    "winston": "^3.8.1",
    "winston-express": "^0.1.1",
    "winston-loki": "^6.0.5",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
