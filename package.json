  "keywords": [],
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll --coverage --verbose",
    "start": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "build": "pnpm tsc",
    "dev": "concurrently -k \"pnpm tsc --watch\" \"nodemon build/src/index.js\"",
    "ndev": "nodemon --watch './src/*.ts' --exec 'ts-node' src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:cli": "ts-node --transpile-only ./node_modules/typeorm/cli.js",
    "migration:generate": "pnpm run typeorm:cli migration:generate",
    "migration:create": "pnpm run typeorm:cli migration:create",
    "migration:run": "pnpm run typeorm:cli migration:run",
    "migration:revert": "pnpm run typeorm:cli migration:revert"
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "config": "^3.3.7",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.17.2",
    "got": "^12.1.0",
    "pg": "^8.4.0",
    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.6",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/node": "^16.11.10",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.2.2",
    "jest": "^28.1.1",
    "nodemon": "^2.0.18",
    "ts-jest": "^28.0.5",
    "ts-node": "10.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.5.2"
  }
}
